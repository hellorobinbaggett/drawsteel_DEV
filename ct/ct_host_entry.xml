<root>
	<windowclass name="ct_entry" merge="join">
		<script file="ct/scripts/ct_entry_DS.lua" />
		<sheetdata>
			<button_ctentry_active name="active" merge="delete" />
			<number_ctentry_initresult name="initresult" merge="delete" />

			<!-- This button allows GM to remove entries from the initiative order -->
			<button_initiative_toggle name="initresult" insertbefore="token" />

			<number_ctentry_staminamax name="sta_max" source="stamina.max" insertbefore="name" />
			<number_ctentry_stamina name="sta_curr" source="stamina.current" insertbefore="name" />
		</sheetdata>
	</windowclass>

	<windowclass name="ct_entry_heroes" copy="ct_entry" />
	<windowclass name="ct_entry_monsters" copy="ct_entry" />
</root>
